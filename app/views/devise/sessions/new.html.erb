<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-control">
    <%= f.label :email, class: "label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered" %>
  </div>

  <div class="form-control">
    <%= f.label :password, class: "label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-control">
      <%= f.label :remember_me, class: "label cursor-pointer justify-start flex gap-2" do %>
        <span class="label-text">Remember Me</span>
        <%= f.check_box :remember_me, class: "checkbox checkbox-primary checkbox-sm" %>
      <% end %>
    </div>
  <% end %>

  <div class="actions my-4">
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

