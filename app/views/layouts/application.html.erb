<!DOCTYPE html>
<html data-theme="night">
    <head>
  <title>MealBook</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= vite_client_tag %>
  <%= vite_javascript_tag 'application' %>

    </head>

    <body>
        <nav class="navbar">
          <% if user_signed_in? %>
            <div class="navbar bg-base-100">
              <div class="flex-1">
                <%= link_to 'My Meals', root_path, class: "btn btn-ghost text-xl" %>
              </div>
            </div>
            <div class="flex-none">
              <ul class="flex gap-1 px-2">
                <li class="mx-1">
                  <%= link_to 'New Meal', new_meal_path, class: "btn btn-primary" %>
                </li>
                <li class="mx-1">
                  <%= button_to "Sign out", destroy_user_session_path, method: :delete, form_class: "contents", class: "btn btn-error" %>
                </li>
              </ul>
            </div>
          <% end %>
        </nav>
        <main class="prose container pb-6">
          <%= yield %>
        </main>
    </body>
</html>
